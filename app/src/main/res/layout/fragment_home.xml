<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".navbar.home.Home"
    style="@style/CorTeladeFundo" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        style="@style/topTela" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonAddPublicacao"
            style="@style/ButtonCadastrar"
            android:text="Incluir publicação"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="30dp"/>

        <ImageButton
            android:id="@+id/btnVagas"
            android:layout_width="360dp"
            android:layout_marginRight="25dp"
            android:layout_height="180dp"
            android:scaleType="fitCenter"
            android:src="@drawable/imageservicos"
            android:layout_marginLeft="25dp"
            android:background="@drawable/arredondar_button"
            android:contentDescription="Selecione uma imagem"
            android:layout_weight="1"
            android:layout_marginBottom="35dp"/>

        <ImageButton
            android:id="@+id/btnServicos"
            android:layout_width="360dp"
            android:layout_height="180dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/arredondar_button"
            android:contentDescription="Selecione uma imagem"
            android:scaleType="fitCenter"
            android:src="@drawable/imagefreelancers" />

    </LinearLayout>
</FrameLayout>